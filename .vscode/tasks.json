{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G",
                "MinGW Makefiles",
                "-B",
                "${workspaceFolder}/cmake-build-debug",
                "-S",
                "${workspaceFolder}",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
                // Change your path to LLVM here
                "-DCMAKE_C_COMPILER=E:/LLVM/bin/clang.exe",
                "-DCMAKE_CXX_COMPILER=E:/LLVM/bin/clang++.exe"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/cmake-build-debug",
                "--config",
                "Debug",
                "--",
                "-j",
                "8"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "dependsOn": [
                "CMake Configure"
            ]
        },
        {
            "label": "CMake Configure Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G",
                "MinGW Makefiles",
                "-B",
                "${workspaceFolder}/cmake-build-release",
                "-S",
                "${workspaceFolder}",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
                "-DCMAKE_C_COMPILER=E:/LLVM/bin/clang.exe",
                "-DCMAKE_CXX_COMPILER=E:/LLVM/bin/clang++.exe"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/cmake-build-release",
                "--config",
                "Release",
                "--",
                "-j",
                "8"
            ],
            "group": "build",
            "problemMatcher": "$gcc",
            "dependsOn": [
                "CMake Configure Release"
            ]
        },
        {
            "label": "Clean Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/cmake-build-debug",
                "--target",
                "clean"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Clean Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/cmake-build-release",
                "--target",
                "clean"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}