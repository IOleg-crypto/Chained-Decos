{
      "C_Cpp.default.compilerPath": "E:/LLVM/bin/clang++.exe",
      "files.associations": {
            "*.embeddedhtml": "html",
            "*.html": "html",
            "*.cpp": "cpp",
            "*.h": "cpp",
            "*.c": "c",
            "*.py": "python",
            "*.css": "css",
            "*.scss": "scss",
            "*.js": "javascript",
            "*.jsx": "javascript",
            "*.ts": "typescript",
            "*.tsx": "typescript",
            "*.json": "json",
            "*.md": "markdown",
            "*.mdx": "markdown",
            "*.xml": "xml",
            "algorithm": "cpp",
            "xutility": "cpp"
      },
      "editor.formatOnSave": true,
      "[cpp]": {
            "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
      },
      "cmake.configureOnOpen": true,
      "cmake.buildDirectory": "${workspaceFolder}/cmake-build-${buildType}",
      "cmake.generator": "MinGW Makefiles",
      "cmake.configureSettings": {
            "CMAKE_BUILD_TYPE": "Debug",
            "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
            "CMAKE_C_COMPILER": "E:/LLVM/bin/clang.exe",
            "CMAKE_CXX_COMPILER": "E:/LLVM/bin/clang++.exe"
      },
      "cmake.defaultVariants": {
            "buildType": {
                  "default": "debug",
                  "description": "The build type.",
                  "choices": {
                        "debug": {
                              "short": "Debug",
                              "long": "Disable optimizations - include debug information.",
                              "buildType": "Debug"
                        },
                        "release": {
                              "short": "Release",
                              "long": "Optimize for speed - exclude debug information.",
                              "buildType": "Release"
                        }
                  }
            }
      },
      "cmake.debugConfig": {
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "args": []
      },
      "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
      "C_Cpp.clang_format_style": "file",
      "C_Cpp.enhancedColorization": "enabled"
}