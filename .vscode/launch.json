{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Launch Debug",
      "program": "${workspaceFolder}/cmake-build-debug/ChainedDecos.exe",
      "args": [],
      "cwd": "${workspaceFolder}/cmake-build-debug/",
      "stopOnEntry": true,
      "env": [],
    },
    {
      "name": "Debug with LLDB",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/ChainedDecos_debug.exe",
      "args": [],
      "cwd": "${workspaceFolder}/build",
      "stopOnEntry": true,
      "sourceMap": {
        "${workspaceFolder}": "${workspaceFolder}"
      },
      "setupCommands": [
        {
          "description": "Load debug symbols",
          "text": "target symbols add \"${workspaceFolder}/build/bin/ChainedDecos_debug.exe\"",
          "ignoreFailures": true
        },
        {
          "description": "Set source path",
          "text": "settings set target.source-map . \"${workspaceFolder}\"",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Debug with GDB",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/ChainedDecos.exe",
      "args": [],
      "cwd": "${workspaceFolder}\\build",
      "stopAtEntry": true,
      "miDebuggerPath": "C:/MinGW/bin/gdb.exe",
    },
  ]
}