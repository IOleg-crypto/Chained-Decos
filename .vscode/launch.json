{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Launch Debug",
      "program": "${workspaceFolder}/cmake-build-debug/ChainedDecos.exe",
      "args": [],
      "cwd": "${workspaceFolder}/cmake-build-debug/",
      "stopOnEntry": true,
      "env": [],
      "console": "externalTerminal",
    },
    {
      "name": "Debug with LLDB",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/cmake-build-debug/ChainedDecos.exe",
      "args": [],
      "cwd": "${workspaceFolder}/cmake-build-debug/",
      "stopOnEntry": true,
      "sourceMap": {
        "${workspaceFolder}": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug with GDB",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/cmake-build-debug/ChainedDecos.exe",
      "args": [],
      "cwd": "${workspaceFolder}/cmake-build-debug/",
      "stopOnEntry": true,
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Launch Release",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/cmake-build-release/ChainedDecos.exe",
      "args": [],
      "cwd": "${workspaceFolder}/cmake-build-release/",
      "stopOnEntry": false
    }
  ]
}