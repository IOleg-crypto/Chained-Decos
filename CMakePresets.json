{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "ninja-debug",
            "displayName": "Ninja Debug",
            "description": "Debug build using Ninja generator",
            "inherits": "base",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "ninja-release",
            "displayName": "Ninja Release",
            "description": "Release build using Ninja generator",
            "inherits": "base",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "vs2022",
            "displayName": "Visual Studio 2022",
            "description": "Visual Studio 2022 multi-config generator",
            "inherits": "base",
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "value": "x64",
                "strategy": "set"
            }
        },
        {
            "name": "vs2019",
            "displayName": "Visual Studio 2019",
            "description": "Visual Studio 2019 multi-config generator",
            "inherits": "base",
            "generator": "Visual Studio 16 2019",
            "architecture": {
                "value": "x64",
                "strategy": "set"
            }
        },
        {
            "name": "make-debug",
            "displayName": "Unix Makefiles Debug",
            "description": "Debug build using Unix Makefiles (Linux)",
            "inherits": "base",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "make-release",
            "displayName": "Unix Makefiles Release",
            "description": "Release build using Unix Makefiles (Linux)",
            "inherits": "base",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ninja-debug",
            "configurePreset": "ninja-debug"
        },
        {
            "name": "ninja-release",
            "configurePreset": "ninja-release"
        },
        {
            "name": "vs2022-debug",
            "configurePreset": "vs2022",
            "configuration": "Debug"
        },
        {
            "name": "vs2022-release",
            "configurePreset": "vs2022",
            "configuration": "Release"
        },
        {
            "name": "vs2019-debug",
            "configurePreset": "vs2019",
            "configuration": "Debug"
        },
        {
            "name": "vs2019-release",
            "configurePreset": "vs2019",
            "configuration": "Release"
        },
        {
            "name": "make-debug",
            "configurePreset": "make-debug"
        },
        {
            "name": "make-release",
            "configurePreset": "make-release"
        }
    ]
}
